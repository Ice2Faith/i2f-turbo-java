<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="i2f.extension.jdbc.proxy.mybatis.test.mapper.TestMapper">

    <resultMap id="mapRewriteVo" type="i2f.extension.jdbc.proxy.mybatis.test.TestVo">
        <result property="id" column="ID"/>
        <result property="code" column="CODE"/>
        <result property="name" column="NAME"/>
    </resultMap>

    <sql id="sqlTest">
        <if test='req==null'>
            test sql
        </if>
    </sql>

    <sql id="com.test.sqlTestFull">
        <if test='req!=null'>
            test sql full
        </if>
    </sql>


    <select id="queryRewriteList" resultMap="mapRewriteVo">
        <include refid="sqlTest"></include>
        <include refid="com.test.sqlTestFull"></include>
        SELECT * FROM (

        <trim prefix="select" suffix="from" prefixOverrides="select|," suffixOverrides="from|,">
            SELECT
            rownum-1 AS ROWIDX,
            <!-- comment -->
            a.*
            FROM
        </trim>

        (
        select
        <if test="req.codeColumn!=null">
            ${req.codeColumn} as CODE,
        </if>
        <if test="req.nameColumn!=null">
            ${req.nameColumn} as NAME,
        </if>
        ${req.idColumn} as ID
        from ${req.tableName}
        <where>
            <if test="$root!=null">
                <![CDATA[
                and 1>2
                ]]>
            </if>
            <choose>
                <when test="$root!=null">
                    and 1=1
                </when>
                <otherwise>
                    and 1=2
                </otherwise>
            </choose>
        </where>

        order by ${req.idColumn}
        ) a
        <where>
            <if test="post!=null">
                and a.ID in
                <foreach collection="post.vals" item="item" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>
        </where>
        ) a
        <where>
            And ROWIDX &gt;= #{offset}
            and ROWIDX &lt; #{size}
        </where>
    </select>

    <update id="updateRewrite">
        update ${req.tableName}
        <set>
            <if test="req!=null">
                ${req.codeColumn} =#{post.code,jdbcType=VARCHAR},
            </if>
            <if test="req!=null">
                ${req.nameColumn} =#{post.name,jdbcType=VARCHAR},
            </if>
            ${req.idColumn}=#{post.id},
        </set>
        where
        ${req.idColumn}=#{post.id}
    </update>

</mapper>
